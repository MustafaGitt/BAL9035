@using BAL9035.Core

<div class="modal-header popup-header">
    <h4 class="modal-title  pull-left header " id="exampleModalLongTitleAddLocation">LOCATION</h4>
    <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">x</span>
    </button>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">


        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-3">Address 1 </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" id="F4" name="F4" maxlength="60" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Address 2 </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" id="F5" name="F5" maxlength="60" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">City </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" id="F6" name="F6" maxlength="35" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">State </label>
                <div class="col-md-9">
                    <p>

                        @Html.DropDownList("F7", DDLUtil.GetState("0"), new { @class = "form-control", onchange = "FetchCounties(0)" })
                    </p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">County </label>
                <div class="col-md-9">
                    <select name="F8" id="F8" class="form-control">
                        <option value="0">-- SELECT --</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">Postal Code  </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" id="F9" name="F9" maxlength="5" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3" style="padding-left:0;">Wage Range From</label>
                <div class="col-md-9">
                    <input class="form-control" type="number" id="LocWageFrom" name="LocWageFrom" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Wage Range To</label>
                <div class="col-md-9">
                    <input class="form-control" type="number" id="LocWageTo" name="LocWageTo" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Secondary Entity Business Name</label>
                <div class="col-md-9">
                    <input class="form-control" type="text" id="SecondEntityName" name="SecondEntityName" />
                </div>
            </div>
            <div class="errorMessage">
                <i></i><span id="reqLoc"></span>
            </div>
        </div>


    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button id="btnLocClose" type="button" class="btn btn-warning" onclick="btnLocOnClose()">Clear</button>
                <button id="btnLocSave" type="submit" class="btn btn-success inactive" onclick="UpdateLocationTable()">Add Location</button>
                <button id="btnLocSav1" type="button" class="btn btn-success" onclick="UpdateLocationTable()">Add Location</button>
            </div>
        </div>
    </div>
}